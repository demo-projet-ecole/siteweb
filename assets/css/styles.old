/* CSS global */

* {
    margin: 0;
    padding: 0;
}

body {
	background: #f4f4f4;
}

 img {border: 0; }

a {
	text-decoration: none;
	color: black;
}

a:hover {
	text-decoration:underline;
}

h1.titre {
    margin:30px 0 30px 0;
	font-size: 30px;
    line-height: 40px;
    font-weight: 500;
}


.padbot {
	
	padding-bottom: 30px; /*Pour un padding bottom sur un Div*/
}

/*footer*/

.stylish-color-dark {
	
	background: black;
	color:white;
	
}

.stylish-color-dark a {
	color: white
}

/* Portrait */
@media only screen 
  and (min-device-width: 320px) 
  and (max-device-width: 480px)
  and (-webkit-min-device-pixel-ratio: 2)
  and (orientation: portrait) {

	/*corrige le pb d'alignement du burger*/
	.navbar {
    padding: 1.2rem 0.6rem !important;
    left: 5px !important;
}
	  
	  h1.titre {
  	display: none; /*Suppression du titre en responsive phone puis du carousel*/
}
	  
	  #carousel-thumb {
		  display: none;
	  }
	  
}



/* Landscape correction burger */
@media only screen 
  and (min-device-width: 320px) 
  and (max-device-width: 480px)
  and (-webkit-min-device-pixel-ratio: 2)
  and (orientation: landscape) {
	  
	  
	.navbar {
    
    top:1px!important;
    
}

}
	  


.padtop {
    padding-top: 20px;
	
}
